<body>
<h1>Burgers!</h1>

<h2>Eat The Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">TIME TO EAT!</button>
        </form>

        
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers were devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">EAT ME!</button>
        </form>

       
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-update-form" action="/" method="POST">


  <div class="form-group">
    <label for="burger"><strong>Burger Name</strong></label><br>
    <input type="text" id="burger" name="burger_name">
  </div>


  <button type="submit">Add Burger</button>
</form>
</div>
</body>
